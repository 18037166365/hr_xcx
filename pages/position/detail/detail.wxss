@import "/template/footer/footer.wxss";
@import "/template/position/position.wxss";

.current-position{
  padding:30rpx;
  border-bottom:1rpx solid #e5e5e5; 
  background:#ffffff;
}
.company-info{
  margin-bottom: 24rpx;
  background: #ffffff;
}
.company-info:before{
  border-top:none;
}
.position-desc .content{
  padding:30rpx;
  font-size:28rpx;
  line-height: 1.5;
  color:#353535;
}
.position-welfare .tag-list{
  display: flex;
  padding:30rpx;
}
.position-welfare .tag-list .tag{
  height: 44rpx;
  line-height: 44rpx;
  padding:0 8rpx;
  border-radius:8rpx;
  background-color:#5AA2E7;
  margin-right:10rpx;
  font-size:26rpx;
  color: #ffffff;
}
.weui-panel__hd{
  display: flex;
  align-items: center;

}
.weui-panel__hd .img{
  width:34rpx;
  height:34rpx;
  margin-right:10rpx;
}
.relative-position{
  padding-top:30rpx;
  padding-bottom:30rpx;
  border-bottom:1rpx solid #e5e5e5;
  background:#ffffff;
}
.position-recommend .weui-panel__bd{
  padding-left:30rpx;
  padding-right:30rpx;
}
